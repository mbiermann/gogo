<h1>Listing apps</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th colspan="3">Actions</th>
  </tr>
 
  <% @apps.each do |app| %>
    <tr>
      <td><%= app.name %></td>
      <td><%= link_to 'Show', [app], method: :get %></td>
      <td><%= link_to 'Edit', edit_app_path(app) %></td>
      <td><%= link_to 'Remove', [app], method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Add new app', new_app_path() %>