<h1>Invites</h1>

<table class="table">
  <tr>
    <th>Email</th>
    <th>Created</th>
    <th>Registered</th>
    <th>Role</th>
    <th colspan="3">Actions</th>
  </tr>
 
  <% @invites.each do |invite| %>
    <tr>
      <td><%= invite.email %></td>
      <td><%= invite.created_at %></td>
      <td><%= invite.registered? %></td>
      <td><%= link_to 'Remove', [invite], method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Invite user', new_invite_path, :class => "btn btn-default" %>