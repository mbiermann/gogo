<h1>Validate Invite</h1>

<form accept-charset="UTF-8" action="<%= grant_invite_path %>" class="form-horizontal" method="post">

  <% if !!@invalid_pin %>
  <div id="error_explanation">
    <h2>Invite validation failed:</h2>
    <ul>
      <li>The PIN provided is incorrect.</li>
    </ul>
  </div>
  <% end %>

  <!-- Pin input-->
  <div class="control-group">
    <label class="control-label" for="textinput">PIN</label>
    <div class="controls">
          <input name="pin" type="text" class="input-xlarge" />
    </div>
  </div>
  
  <p>
    <%= token_tag nil %>
    <input type="submit" name"Validate" />
  </p>
</form>